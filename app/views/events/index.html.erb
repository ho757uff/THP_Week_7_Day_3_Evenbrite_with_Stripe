  <!-- La classe 'content' est appliquée ici pour englober tout le contenu principal -->
<div class="content">
  <h1>Événements à venir</h1>
  <%= link_to 'Créer un nouvel événement', new_event_path, class: 'btn btn-primary' %>
  <div class="mt-3">
    <% @events.each do |event| %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= event.name %></h5>
          <p class="card-text"><%= event.description %></p>
          <% if event.date.present? %>
            <p class="card-text"><small class="text-muted">Date: <%= event.date.strftime("%d/%m/%Y à %H:%M") %></small></p>
          <% else %>
            <p class="card-text"><small class="text-muted">Date non spécifiée</small></p>
          <% end %>
          <%= link_to 'Voir plus', event_path(event), class: 'btn btn-outline-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
